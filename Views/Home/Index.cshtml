@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen bg-gray-50 text-gray-900">
    
    <section style="background: linear-gradient(to right, #3b82f6, #6366f1); color: white; padding: 5rem 1rem; text-align: center;">
        <div style="animation: fade-in 1.5s ease-in-out;">
            <h1 style="font-size: 3rem; font-weight: bold; margin-bottom: 1rem;">Welcome to Hostel Management System</h1>
            <p style="font-size: 1.25rem; margin-bottom: 2rem;">Simplify Hostel Management, One Click at a Time</p>
            <a href="/Students" style="background: white; color: #3b82f6; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-weight: bold; transition: background 0.3s;">
                Get Started
            </a>
        </div>
    </section>

   
    <section style="padding: 4rem 1rem;">
        <div style="max-width: 1200px; margin: 0 auto;">
            <h2 style="font-size: 2.5rem; font-weight: bold; text-align: center; margin-bottom: 2rem;">Key Features</h2>
            <div style="display: flex; flex-wrap: wrap; gap: 2rem; justify-content: center;">
                
                <div style="background: white; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); border-radius: 0.5rem; padding: 2rem; width: 300px; text-align: center;">
                    <h3 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">Manage Student Profiles</h3>
                    <p style="color: #555;">Easily update and manage detailed student profiles with a user-friendly interface.</p>
                </div>
                
                <div style="background: white; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); border-radius: 0.5rem; padding: 2rem; width: 300px; text-align: center;">
                    <h3 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">Real-Time Dorm Monitoring</h3>
                    <p style="color: #555;">Track dorm capacities and allocate accommodations efficiently.</p>
                </div>
               
                <div style="background: white; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); border-radius: 0.5rem; padding: 2rem; width: 300px; text-align: center;">
                    <h3 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">Secure & Reliable</h3>
                    <p style="color: #555;">Enjoy peace of mind with robust data security and reliability.</p>
                </div>
            </div>
        </div>
    </section>

    
    <section style="background: #6366f1; color: white; padding: 4rem 1rem; text-align: center;">
        <div style="animation: fade-in 1.5s ease-in-out;">
            <h2 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem;">Ready to Simplify Hostel Management?</h2>
            <p style="margin-bottom: 2rem;">Start using the Hostel Management System today and experience the difference.</p>
            <a href="/Students" style="background: white; color: #6366f1; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-weight: bold; transition: background 0.3s;">
                Take a Look
            </a>
        </div>
    </section>
</div>

<style>
    
    keyframes fade-in {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    
    a:hover {
        background: #e0e0e0;
    }
</style>
