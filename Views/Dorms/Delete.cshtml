@model HostelManagementAPI.Models.Dorm

<h2>Delete Dorm</h2>

<h3>Are you sure you want to delete this dorm?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Dorm Name
        </dt>
        <dd class="col-sm-10">
            @Model.DormName
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>
        <dt class="col-sm-2">
            Occupied Slots
        </dt>
        <dd class="col-sm-10">
            @Model.OccupiedSlots
        </dd>
        <dt class="col-sm-2">
            Gender Allowed
        </dt>
        <dd class="col-sm-10">
            @Model.GenderAllowed
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DormID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
